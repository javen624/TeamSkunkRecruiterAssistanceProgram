@model CharacterVM
@{
    ViewData["Title"] = "Add Character";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Character" asp-action="Index" method="post" class="form-horizontal">
    <h4>Add Chracter Form</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="CharacterName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="CharacterName" class="form-control" />
            <span asp-validation-for="CharacterName" class="text-danger"></span>
            <a asp-controller="Character" asp-action="Create" class="btn-bracketed">Create</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Confirm</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
