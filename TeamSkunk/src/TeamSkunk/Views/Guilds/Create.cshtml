@model TeamSkunk.Models.Guild
@using TeamSkunk.Models
@using TeamSkunk.Services

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Guild</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Order" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RaidTimes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RaidTimes" class="form-control" />
                <span asp-validation-for="RaidTimes" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Remarks" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ResetTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ResetTime" class="form-control" />
                <span asp-validation-for="ResetTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tier" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @*<select asp-for="Tier" class="form-control"></select>*@
                <select asp-for="Tier" asp-items="@Html.GetEnumSelectList<GuildTiers>()" class="form-control"></select>
                <span asp-validation-for="Tier" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
